@page
@model RegisterModel

@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DondeComemos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px 0;
        }
        .register-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            max-width: 1000px;
            width: 90%;
            display: flex;
        }
        .register-left {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            padding: 60px 40px;
            color: white;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .register-left h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
        }
        .register-left p {
            font-size: 1.1rem;
            opacity: 0.9;
            line-height: 1.6;
        }
        .register-left .benefit {
            display: flex;
            align-items: center;
            margin: 15px 0;
        }
        .register-left .benefit i {
            font-size: 1.5rem;
            margin-right: 15px;
            background: rgba(255,255,255,0.2);
            padding: 10px;
            border-radius: 10px;
        }
        .register-right {
            padding: 60px 50px;
            flex: 1;
        }
        .register-right h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }
        .register-right .subtitle {
            color: #888;
            margin-bottom: 30px;
        }
        .form-floating {
            position: relative;
            margin-bottom: 20px;
        }
        .form-floating input {
            height: 55px;
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            padding: 15px;
            font-size: 1rem;
            transition: all 0.3s;
        }
        .form-floating input:focus {
            border-color: #f093fb;
            box-shadow: 0 0 0 0.2rem rgba(240, 147, 251, 0.25);
        }
        .form-floating label {
            padding: 15px;
        }
        .btn-register {
            height: 55px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border: none;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(240, 147, 251, 0.4);
        }
        .password-strength {
            margin-top: 5px;
            font-size: 0.85rem;
        }
        .strength-bar {
            height: 4px;
            background: #e0e0e0;
            border-radius: 2px;
            overflow: hidden;
            margin-top: 5px;
        }
        .strength-bar-fill {
            height: 100%;
            transition: all 0.3s;
            border-radius: 2px;
        }
        .divider {
            text-align: center;
            margin: 20px 0;
            position: relative;
        }
        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 45%;
            height: 1px;
            background: #e0e0e0;
        }
        .divider::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            width: 45%;
            height: 1px;
            background: #e0e0e0;
        }
        .links {
            margin-top: 20px;
            text-align: center;
        }
        .links a {
            color: #f093fb;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }
        .links a:hover {
            color: #f5576c;
        }
        .back-home {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            background: rgba(255,255,255,0.2);
            padding: 10px 20px;
            border-radius: 10px;
            transition: background 0.3s;
        }
        .back-home:hover {
            background: rgba(255,255,255,0.3);
            color: white;
        }
        @@media (max-width: 768px) {
            .register-container {
                flex-direction: column;
            }
            .register-left {
                padding: 40px 30px;
            }
            .register-right {
                padding: 40px 30px;
            }
        }
    </style>
</head>
<body>
    <a href="/" class="back-home">
        <i class="bi bi-arrow-left"></i> Volver al Inicio
    </a>

    <div class="register-container">
        <div class="register-left">
            <h1>🎉 Únete a Nosotros</h1>
            <p>Crea tu cuenta y descubre una nueva forma de explorar la gastronomía arequipeña</p>
            
            <div class="benefit">
                <i class="bi bi-gift"></i>
                <span>Acceso exclusivo a promociones</span>
            </div>
            <div class="benefit">
                <i class="bi bi-chat-dots"></i>
                <span>Comparte tus experiencias</span>
            </div>
            <div class="benefit">
                <i class="bi bi-trophy"></i>
                <span>Gana recompensas por reseñas</span>
            </div>
            <div class="benefit">
                <i class="bi bi-people"></i>
                <span>Únete a una comunidad foodie</span>
            </div>
        </div>

        <div class="register-right">
            <h2>Crea tu Cuenta ✨</h2>
            <p class="subtitle">Es rápido y completamente gratis</p>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                           aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">
                        <i class="bi bi-envelope"></i> Correo Electrónico
                    </label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" 
                           aria-required="true" placeholder="password" type="password" id="password" />
                    <label asp-for="Input.Password">
                        <i class="bi bi-lock"></i> Contraseña
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    <div class="password-strength">
                        <div class="strength-bar">
                            <div class="strength-bar-fill" id="strengthBar"></div>
                        </div>
                        <small id="strengthText" class="text-muted">Mínimo 6 caracteres</small>
                    </div>
                </div>
                
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" 
                           aria-required="true" placeholder="password" type="password" />
                    <label asp-for="Input.ConfirmPassword">
                        <i class="bi bi-lock-fill"></i> Confirmar Contraseña
                    </label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>
                
                <button id="registerSubmit" type="submit" class="w-100 btn btn-primary btn-register">
                    Crear Cuenta
                </button>

                <div class="divider">
                    <span style="background: white; padding: 0 10px; position: relative; color: #888;">o</span>
                </div>

                <div class="links">
                    <p style="color: #666;">¿Ya tienes una cuenta? 
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Inicia sesión aquí</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.getElementById('password').addEventListener('input', function(e) {
            const password = e.target.value;
            const strengthBar = document.getElementById('strengthBar');
            const strengthText = document.getElementById('strengthText');
            
            let strength = 0;
            if (password.length >= 6) strength++;
            if (password.length >= 8) strength++;
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
            if (/\d/.test(password)) strength++;
            if (/[^a-zA-Z0-9]/.test(password)) strength++;
            
            const colors = ['#e74c3c', '#e67e22', '#f39c12', '#2ecc71', '#27ae60'];
            const texts = ['Muy débil', 'Débil', 'Aceptable', 'Fuerte', 'Muy fuerte'];
            const widths = ['20%', '40%', '60%', '80%', '100%'];
            
            if (password.length === 0) {
                strengthBar.style.width = '0%';
                strengthText.textContent = 'Mínimo 6 caracteres';
                strengthText.style.color = '#888';
            } else {
                strengthBar.style.width = widths[strength - 1] || '20%';
                strengthBar.style.backgroundColor = colors[strength - 1] || '#e74c3c';
                strengthText.textContent = texts[strength - 1] || 'Muy débil';
                strengthText.style.color = colors[strength - 1] || '#e74c3c';
            }
        });
    </script>
</body>
</html>