@page
@model RegisterModel

@{
    ViewData["Title"] = "Registrarse";
}

<style>
    .register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        padding: 40px 0;
    }
    
    .register-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    
    .register-image {
        background: linear-gradient(rgba(240, 147, 251, 0.8), rgba(245, 87, 108, 0.8)),
                    url('https://images.unsplash.com/photo-1555939594-58d7cb561ad1?w=800') center/cover;
        min-height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        padding: 60px 40px;
    }
    
    .register-form {
        padding: 50px 40px;
    }
    
    .form-control {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 20px;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        border-color: #f5576c;
        box-shadow: 0 0 0 0.2rem rgba(245, 87, 108, 0.25);
    }
    
    .btn-register {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        border-radius: 10px;
        padding: 14px;
        font-weight: 600;
        color: white;
        transition: transform 0.3s;
    }
    
    .btn-register:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(245, 87, 108, 0.4);
        color: white;
    }
    
    .feature-item {
        display: flex;
        align-items: start;
        margin-bottom: 20px;
    }
    
    .feature-icon {
        width: 50px;
        height: 50px;
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.5rem;
    }
</style>

<div class="register-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="register-card">
                    <div class="row g-0">
                        <div class="col-lg-5 d-none d-lg-block">
                            <div class="register-image">
                                <div>
                                    <h1 class="display-4 fw-bold mb-4">🍽️ DondeComemos</h1>
                                    <p class="lead mb-4">Únete a nuestra comunidad gastronómica</p>
                                    
                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="bi bi-search"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-1">Descubre</h6>
                                            <p class="small mb-0">Encuentra los mejores restaurantes</p>
                                        </div>
                                    </div>
                                    
                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="bi bi-star"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-1">Califica</h6>
                                            <p class="small mb-0">Comparte tu experiencia</p>
                                        </div>
                                    </div>
                                    
                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="bi bi-heart"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-1">Guarda</h6>
                                            <p class="small mb-0">Crea tu lista de favoritos</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-7">
                            <div class="register-form">
                                <div class="text-center mb-4">
                                    <h2 class="fw-bold">Crear Cuenta</h2>
                                    <p class="text-muted">Regístrate gratis en segundos</p>
                                </div>

                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                    
                                    <div class="mb-3">
                                        <label asp-for="Input.Email" class="form-label fw-semibold">
                                            <i class="bi bi-envelope me-2"></i>Email
                                        </label>
                                        <input asp-for="Input.Email" class="form-control" placeholder="ejemplo@correo.com" />
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="Input.Password" class="form-label fw-semibold">
                                                <i class="bi bi-lock me-2"></i>Contraseña
                                            </label>
                                            <input asp-for="Input.Password" class="form-control" placeholder="••••••••" />
                                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">
                                                <i class="bi bi-lock-fill me-2"></i>Confirmar
                                            </label>
                                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="••••••••" />
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="terms" required />
                                            <label class="form-check-label small" for="terms">
                                                Acepto los <a href="#">términos y condiciones</a> y la <a href="#">política de privacidad</a>
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-register w-100 mb-3">
                                        Crear Cuenta
                                    </button>
                                    
                                    <div class="text-center mb-3">
                                        <span class="text-muted">o regístrate con</span>
                                    </div>
                                    
                                    <div class="row g-2 mb-4">
                                        <div class="col-6">
                                            <a href="#" class="social-login w-100" style="border: 2px solid #e0e0e0; border-radius: 10px; padding: 12px; text-decoration: none; color: #333; display: flex; align-items: center; justify-content: center; gap: 10px;">
                                                <i class="bi bi-google"></i> Google
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a href="#" class="social-login w-100" style="border: 2px solid #e0e0e0; border-radius: 10px; padding: 12px; text-decoration: none; color: #333; display: flex; align-items: center; justify-content: center; gap: 10px;">
                                                <i class="bi bi-facebook"></i> Facebook
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <div class="text-center">
                                        <p class="text-muted mb-0">
                                            ¿Ya tienes una cuenta? 
                                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">
                                                Inicia sesión
                                            </a>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">
                        <i class="bi bi-arrow-left me-2"></i>Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}