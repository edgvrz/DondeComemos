@{
    ViewData["Title"] = "Panel de Administración";
}

<style>
    .admin-card {
        border: none;
        border-radius: 20px;
        transition: all 0.3s;
        cursor: pointer;
        height: 100%;
    }
    .admin-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    .admin-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin: 0 auto 20px;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-speedometer2"></i> Panel de Administración
        </h1>
        <p class="lead text-muted">Gestión completa de DondeComemos</p>
    </div>

    <div class="row g-4">
        <!-- Restaurantes -->
        <div class="col-md-4">
            <a asp-controller="Restaurantes" asp-action="Index" class="text-decoration-none">
                <div class="card admin-card shadow-sm text-center p-4">
                    <div class="admin-icon bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-shop"></i>
                    </div>
                    <h4 class="fw-bold">Restaurantes</h4>
                    <p class="text-muted">Gestionar establecimientos</p>
                </div>
            </a>
        </div>

        <!-- Calendario -->
        <div class="col-md-4">
            <a asp-controller="Reservas" asp-action="Calendario" class="text-decoration-none">
                <div class="card admin-card shadow-sm text-center p-4">
                    <div class="admin-icon bg-success bg-opacity-10 text-success">
                        <i class="bi bi-calendar-week"></i>
                    </div>
                    <h4 class="fw-bold">Calendario</h4>
                    <p class="text-muted">Reservas y disponibilidad</p>
                </div>
            </a>
        </div>

        <!-- Estadísticas -->
        <div class="col-md-4">
            <a asp-controller="Estadisticas" asp-action="Index" class="text-decoration-none">
                <div class="card admin-card shadow-sm text-center p-4">
                    <div class="admin-icon bg-info bg-opacity-10 text-info">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h4 class="fw-bold">Estadísticas</h4>
                    <p class="text-muted">Métricas y reportes</p>
                </div>
            </a>
        </div>

        <!-- Pagos -->
        <div class="col-md-4">
            <a asp-controller="Pagos" asp-action="MisPagos" class="text-decoration-none">
                <div class="card admin-card shadow-sm text-center p-4">
                    <div class="admin-icon bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-credit-card"></i>
                    </div>
                    <h4 class="fw-bold">Pagos</h4>
                    <p class="text-muted">Gestión de transacciones</p>
                </div>
            </a>
        </div>

        <!-- Usuarios -->
        <div class="col-md-4">
            <a href="#" class="text-decoration-none">
                <div class="card admin-card shadow-sm text-center p-4">
                    <div class="admin-icon bg-danger bg-opacity-10 text-danger">
                        <i class="bi bi-people"></i>
                    </div>
                    <h4 class="fw-bold">Usuarios</h4>
                    <p class="text-muted">Gestión de usuarios</p>
                </div>
            </a>
        </div>

        <!-- Configuración -->
        <div class="col-md-4">
            <a href="#" class="text-decoration-none">
                <div class="card admin-card shadow-sm text-center p-4">
                    <div class="admin-icon bg-secondary bg-opacity-10 text-secondary">
                        <i class="bi bi-gear"></i>
                    </div>
                    <h4 class="fw-bold">Configuración</h4>
                    <p class="text-muted">Ajustes del sistema</p>
                </div>
            </a>
        </div>
    </div>
</div>