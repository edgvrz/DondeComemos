@model DondeComemos.Models.UserProfile

@{
    ViewData["Title"] = "Configuración de Cuenta";
}

<div class="container py-5">
    <h1 class="fw-bold mb-4">
        <i class="bi bi-gear"></i> Configuración de Cuenta
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <!-- Privacidad y Notificaciones -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> Privacidad y Notificaciones</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ActualizarConfiguracion" method="post">
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Notificaciones por Email</h6>
                            
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="mostrarFavoritos" name="MostrarFavoritos">
                                <label class="form-check-label" for="mostrarFavoritos">
                                    Mostrar mis restaurantes favoritos
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-save"></i> Guardar Configuración
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Gestión de Datos -->
        <div class="col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-download"></i> Gestión de Datos</h5>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Exportar mis datos</h6>
                    <p class="text-muted small">
                        Descarga una copia de toda tu información personal, reseñas, favoritos e historial.
                    </p>
                    <button class="btn btn-info w-100 mb-3" onclick="exportarDatos()">
                        <i class="bi bi-download"></i> Exportar mis datos
                    </button>

                    <h6 class="fw-bold mb-3 mt-4">Limpiar historial</h6>
                    <p class="text-muted small">
                        Elimina tu historial de búsquedas guardado.
                    </p>
                    <form asp-controller="Profile" asp-action="LimpiarHistorial" method="post">
                        <button type="submit" class="btn btn-warning w-100" 
                                onclick="return confirm('¿Deseas limpiar todo tu historial?')">
                            <i class="bi bi-trash"></i> Limpiar historial
                        </button>
                    </form>
                </div>
            </div>

            <!-- Zona de Peligro -->
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Zona de Peligro</h5>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Eliminar cuenta</h6>
                    <p class="text-muted small">
                        Una vez eliminada tu cuenta, no hay vuelta atrás. Por favor, ten certeza.
                    </p>
                    <button class="btn btn-danger w-100" onclick="confirmarEliminacion()">
                        <i class="bi bi-x-circle"></i> Eliminar mi cuenta
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Preferencias de Idioma y Región -->
    <div class="row g-4 mt-2">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-globe"></i> Idioma y Región</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ActualizarIdioma" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Idioma</label>
                            <select class="form-select" name="Idioma">
                                <option value="es" selected>Español</option>
                                <option value="en">English</option>
                                <option value="pt">Português</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Zona Horaria</label>
                            <select class="form-select" name="ZonaHoraria">
                                <option value="America/Lima" selected>Lima (UTC-5)</option>
                                <option value="America/New_York">New York (UTC-5)</option>
                                <option value="Europe/Madrid">Madrid (UTC+1)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Formato de Fecha</label>
                            <select class="form-select" name="FormatoFecha">
                                <option value="dd/MM/yyyy" selected>DD/MM/YYYY</option>
                                <option value="MM/dd/yyyy">MM/DD/YYYY</option>
                                <option value="yyyy-MM-dd">YYYY-MM-DD</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-info w-100">
                            <i class="bi bi-check"></i> Aplicar Cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sesiones Activas -->
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-pc-display"></i> Sesiones Activas</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        <strong>Sesión Actual</strong>
                        <p class="mb-0 small mt-2">
                            Navegador: Chrome<br>
                            Ubicación: Arequipa, Perú<br>
                            Última actividad: Ahora
                        </p>
                    </div>

                    <h6 class="fw-bold mb-3">Otras sesiones</h6>
                    <p class="text-muted small">No hay otras sesiones activas</p>

                    <button class="btn btn-danger w-100 mt-3" onclick="cerrarTodasSesiones()">
                        <i class="bi bi-box-arrow-right"></i> Cerrar todas las sesiones
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Ayuda y Soporte -->
    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-question-circle"></i> Ayuda y Soporte</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-book text-primary fs-3 me-3"></i>
                                <div>
                                    <h6 class="fw-bold">Centro de Ayuda</h6>
                                    <p class="small text-muted mb-2">
                                        Encuentra respuestas a preguntas frecuentes
                                    </p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver ayuda</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-envelope text-success fs-3 me-3"></i>
                                <div>
                                    <h6 class="fw-bold">Contactar Soporte</h6>
                                    <p class="small text-muted mb-2">
                                        Envía un mensaje a nuestro equipo
                                    </p>
                                    <a asp-controller="Contact" asp-action="Index" class="btn btn-sm btn-outline-success">
                                        Contactar
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-shield-check text-warning fs-3 me-3"></i>
                                <div>
                                    <h6 class="fw-bold">Privacidad y Términos</h6>
                                    <p class="small text-muted mb-2">
                                        Lee nuestras políticas
                                    </p>
                                    <a href="#" class="btn btn-sm btn-outline-warning">Ver políticas</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportarDatos() {
            if (confirm('¿Deseas exportar todos tus datos? Recibirás un archivo con tu información.')) {
                window.location.href = '/Account/ExportarDatos';
            }
        }

        function confirmarEliminacion() {
            if (confirm('⚠️ ADVERTENCIA: Esta acción es PERMANENTE y no se puede deshacer.\n\n¿Estás seguro de que deseas eliminar tu cuenta?')) {
                if (confirm('¿Estás ABSOLUTAMENTE seguro? Se eliminarán todos tus datos, reseñas, favoritos e historial.')) {
                    const motivo = prompt('Por favor, dinos por qué deseas eliminar tu cuenta (opcional):');
                    if (motivo !== null) {
                        window.location.href = `/Account/EliminarCuenta?motivo=${encodeURIComponent(motivo)}`;
                    }
                }
            }
        }

        function cerrarTodasSesiones() {
            if (confirm('Se cerrarán todas las sesiones activas excepto la actual. ¿Continuar?')) {
                window.location.href = '/Account/CerrarSesiones';
            }
        }
    </script>
}
