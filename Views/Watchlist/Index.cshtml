@model IEnumerable<DondeComemos.Models.Watchlist>

@{
    ViewData["Title"] = "Mi Lista de Favoritos";
}

<h2 class="mt-4">Mis Restaurantes Favoritos ❤️</h2>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        Aún no tienes restaurantes en tu lista de favoritos.
    </div>
}
else
{
    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <img src="@item.Restaurante?.ImagenUrl" class="card-img-top" alt="@item.Restaurante?.Nombre" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Restaurante?.Nombre</h5>
                        <p class="card-text text-muted">@item.Restaurante?.Descripcion</p>
                        <a asp-controller="Restaurantes" asp-action="Details" asp-route-id="@item.RestauranteId" class="btn btn-outline-primary btn-sm">
                            Ver detalles
                        </a>
                        <form asp-controller="Watchlist" asp-action="Remove" method="post" class="d-inline">
                            <input type="hidden" name="restauranteId" value="@item.RestauranteId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                Quitar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
