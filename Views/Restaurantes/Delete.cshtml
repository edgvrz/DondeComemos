@model DondeComemos.Models.Restaurante

@{
    ViewData["Title"] = "Eliminar Restaurante";
}

<div class="container py-4">
    <h2 class="fw-bold text-danger">⚠️ Eliminar Restaurante</h2>

    <p>¿Estás seguro de que quieres eliminar este restaurante?</p>

    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
