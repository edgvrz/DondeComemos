@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=TU_API_KEY_AQUI"></script>
    <script>
        async function cargarRestaurantesAleatorios() {
            try {
                const response = await fetch('/api/restaurantes/mapa');
                const restaurantes = await response.json();
                
                const shuffled = restaurantes.sort(() => 0.5 - Math.random());
                const seleccionados = shuffled.slice(0, 10);
                
                const carouselContent = document.getElementById('carouselContent');
                const carouselIndicators = document.getElementById('carouselIndicators');
                carouselContent.innerHTML = '';
                carouselIndicators.innerHTML = '';
                
                seleccionados.forEach((rest, index) => {
                    const indicator = document.createElement('button');
                    indicator.type = 'button';
                    indicator.setAttribute('data-bs-target', '#restaurantesCarousel');
                    indicator.setAttribute('data-bs-slide-to', index);
                    if (index === 0) indicator.className = 'active';
                    carouselIndicators.appendChild(indicator);
                    
                    const slide = document.createElement('div');
                    slide.className = `carousel-item ${index === 0 ? 'active' : ''}`;
                    slide.onclick = () => window.location.href = `/Restaurantes/Details/${rest.id}`;
                    
                    const imagenUrl = rest.imagenUrl || '/img/restaurant-default.jpg';
                    const estrellas = '⭐'.repeat(Math.floor(rest.rating));
                    
                    slide.innerHTML = `
                        <img src="${imagenUrl}" alt="${rest.nombre}">
                        <div class="carousel-overlay">
                            <div class="container">
                                <div class="restaurant-name">${rest.nombre}</div>
                                <div class="rating-stars mb-2">${estrellas} ${rest.rating.toFixed(1)}</div>
                                <p class="lead">${rest.descripcion}</p>
                                <p><i class="bi bi-geo-alt"></i> ${rest.direccion}</p>
                                ${rest.tipoCocina ? `<span class="badge bg-primary me-2">${rest.tipoCocina}</span>` : ''}
                                ${rest.rangoPrecios ? `<span class="badge bg-success">${rest.rangoPrecios}</span>` : ''}
                            </div>
                        </div>
                    `;
                    
                    carouselContent.appendChild(slide);
                });
                
                new bootstrap.Carousel(document.getElementById('restaurantesCarousel'), {
                    interval: 4000,
                    wrap: true
                });
            } catch (error) {
                console.error('Error:', error);
            }
        }
        
        async function cargarTop5Restaurantes() {
            try {
                const response = await fetch('/api/restaurantes/mapa');
                const restaurantes = await response.json();
                
                const top5 = restaurantes
                    .sort((a, b) => b.rating - a.rating)
                    .slice(0, 5);
                
                const container = document.getElementById('topRestaurantesContainer');
                container.innerHTML = '';
                
                top5.forEach((rest, index) => {
                    const imagenUrl = rest.imagenUrl || '/img/restaurant-default.jpg';
                    const estrellas = '⭐'.repeat(Math.floor(rest.rating));
                    
                    const col = document.createElement('div');
                    col.className = 'col-md-6 col-lg-4';
                    if (index === 0) col.className = 'col-12';
                    
                    col.innerHTML = `
                        <div class="card top-restaurant-card shadow-sm">
                            <div class="position-relative">
                                <img src="${imagenUrl}" class="card-img-top" style="height: ${index === 0 ? '300' : '200'}px; object-fit: cover;" alt="${rest.nombre}">
                                <div class="position-absolute top-0 start-0 m-3">
                                    <span class="badge bg-warning text-dark fs-5">#${index + 1}</span>
                                </div>
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-danger">${estrellas} ${rest.rating.toFixed(1)}</span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title fw-bold">${rest.nombre}</h5>
                                <p class="card-text text-muted">${rest.descripcion.substring(0, 100)}...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted"><i class="bi bi-geo-alt"></i> ${rest.direccion}</small>
                                    <a href="/Restaurantes/Details/${rest.id}" class="btn btn-primary btn-sm">Ver Más</a>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    container.appendChild(col);
                });
            } catch (error) {
                console.error('Error:', error);
            }
        }
        
        async function cargarResenasRecientes() {
            try {
                const response = await fetch('/Estadisticas/GetChartData?type=ultimasResenas');
                let resenas = [];
                
                if (response.ok) {
                    resenas = await response.json();
                } else {
                    resenas = [
                        { titulo: "Excelente comida", comentario: "La mejor experiencia gastronómica que he tenido en Arequipa", calificacion: 5.0, nombreUsuario: "María G.", restaurante: "La Trattoria" },
                        { titulo: "Muy recomendado", comentario: "El servicio es impecable y los platos deliciosos", calificacion: 4.5, nombreUsuario: "Carlos R.", restaurante: "El Buen Sabor" },
                        { titulo: "Lugar perfecto", comentario: "Ambiente acogedor y precios justos", calificacion: 4.8, nombreUsuario: "Ana M.", restaurante: "Café del Centro" }
                    ];
                }
                
                const container = document.getElementById('resenasRecientesContainer');
                container.innerHTML = '';
                
                resenas.slice(0, 3).forEach(resena => {
                    const col = document.createElement('div');
                    col.className = 'col-md-4';
                    
                    const estrellas = '⭐'.repeat(Math.floor(resena.calificacion));
                    
                    col.innerHTML = `
                        <div class="card review-card h-100 border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">${resena.titulo}</h5>
                                        <small class="text-muted">${resena.nombreUsuario || 'Usuario'}</small>
                                    </div>
                                    <div class="text-warning">${estrellas}</div>
                                </div>
                                <p class="card-text">${resena.comentario}</p>
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-shop"></i> ${resena.restaurante || 'Restaurante'}
                                    </small>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    container.appendChild(col);
                });
            } catch (error) {
                console.error('Error:', error);
                const container = document.getElementById('resenasRecientesContainer');
                container.innerHTML = `
                    <div class="col-12 text-center text-white">
                        <p>No hay reseñas disponibles en este momento</p>
                    </div>
                `;
            }
        }
        
        function initHomeMap() {
            const arequipa = { lat: -16.409047, lng: -71.537451 };
            
            const map = new google.maps.Map(document.getElementById("mapHome"), {
                zoom: 13,
                center: arequipa,
                styles: [
                    {
                        featureType: "poi",
                        elementType: "labels",
                        stylers: [{ visibility: "off" }]
                    }
                ]
            });

            fetch('/api/restaurantes/mapa')
                .then(response => response.json())
                .then(restaurantes => {
                    restaurantes.forEach(restaurante => {
                        if (restaurante.latitud && restaurante.longitud) {
                            const marker = new google.maps.Marker({
                                position: { lat: restaurante.latitud, lng: restaurante.longitud },
                                map: map,
                                title: restaurante.nombre,
                                icon: {
                                    url: "http://maps.google.com/mapfiles/ms/icons/red-dot.png"
                                }
                            });

                            const infoWindow = new google.maps.InfoWindow({
                                content: `
                                    <div style="max-width: 250px;">
                                        <h6 class="fw-bold mb-2">${restaurante.nombre}</h6>
                                        ${restaurante.imagenUrl ? `<img src="${restaurante.imagenUrl}" style="width:100%; height:120px; object-fit:cover; margin-bottom:8px; border-radius:4px;" />` : ''}
                                        <p class="small text-muted mb-2">${restaurante.descripcion.substring(0, 100)}...</p>
                                        <p class="small mb-1"><i class="bi bi-geo-alt"></i> ${restaurante.direccion}</p>
                                        <p class="small mb-2">⭐ ${restaurante.rating.toFixed(1)}/5.0</p>
                                        <a href="/Restaurantes/Details/${restaurante.id}" class="btn btn-primary btn-sm w-100">Ver Detalles</a>
                                    </div>
                                `
                            });

                            marker.addListener("click", () => {
                                infoWindow.open(map, marker);
                            });
                        }
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                });

            const locationButton = document.createElement("button");
            locationButton.textContent = "Mi Ubicación";
            locationButton.classList.add("btn", "btn-primary", "btn-sm", "m-2");
            map.controls[google.maps.ControlPosition.TOP_RIGHT].push(locationButton);

            locationButton.addEventListener("click", () => {
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(
                        (position) => {
                            const pos = {
                                lat: position.coords.latitude,
                                lng: position.coords.longitude,
                            };
                            map.setCenter(pos);
                            new google.maps.Marker({
                                position: pos,
                                map: map,
                                icon: {
                                    url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png"
                                },
                                title: "Tu ubicación"
                            });
                        },
                        () => {
                            alert("No se pudo obtener tu ubicación");
                        }
                    );
                }
            });
        }

        window.addEventListener('load', () => {
            cargarRestaurantesAleatorios();
            cargarTop5Restaurantes();
            cargarResenasRecientes();
            initHomeMap();
        });
    </script>
}