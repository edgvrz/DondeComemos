@model DondeComemos.Models.HomeViewModel
@{
    ViewData["Title"] = "Inicio";
}

<style>
    .carousel-item {
        height: 500px;
        position: relative;
        overflow: hidden;
    }
    
    .carousel-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        cursor: pointer;
        transition: transform 0.3s;
    }
    
    .carousel-item:hover img {
        transform: scale(1.05);
    }
    
    .carousel-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0,0,0,0.9));
        padding: 60px 20px 30px;
        color: white;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .carousel-item:hover .carousel-overlay {
        opacity: 1;
    }
    
    .restaurant-name {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
    
    .rating-stars {
        color: #ffc107;
        font-size: 1.5rem;
    }
    
    .top-restaurant-card {
        transition: all 0.3s ease;
        height: 100%;
    }
    
    .top-restaurant-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }
    
    .review-card {
        background: #f8f9fa;
        border-left: 4px solid #667eea;
        transition: all 0.3s;
    }
    
    .review-card:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>

@await Html.PartialAsync("Partials/_Hero")

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold text-center mb-4">
            <i class="bi bi-images text-primary"></i> Restaurantes Destacados
        </h2>
        <p class="text-center text-muted mb-5">Explora nuestra selección de restaurantes</p>
        
        <div id="restaurantesCarousel" class="carousel slide shadow-lg rounded" data-bs-ride="carousel">
