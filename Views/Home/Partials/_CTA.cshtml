@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<section class="py-5 bg-light text-center">
    <div class="container">
        @if (!SignInManager.IsSignedIn(User))
        {
            <h5>¿Deseas añadir un lugar o dejar una reseña? Inicia sesión!</h5>
            <div class="mt-3">
                <a class="btn btn-dark btn-lg px-4 py-2 me-2" asp-area="Identity" asp-page="/Account/Login">
                    Iniciar Sesión
                </a>
                <a class="btn btn-outline-dark btn-lg px-4 py-2" asp-area="Identity" asp-page="/Account/Register">
                    Registrarse
                </a>
            </div>
        }
        else
        {
            <h5>¡Explora los mejores restaurantes de Arequipa!</h5>
            <a class="btn btn-primary btn-lg px-4 py-2 mt-3" asp-controller="Restaurantes" asp-action="Search">
                Ver todos los restaurantes
            </a>
        }
    </div>
</section>