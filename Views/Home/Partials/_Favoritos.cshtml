@model IEnumerable<DondeComemos.Models.RestaurantCard>

<div class="container mt-5">
    <h2 class="mb-4">Favoritos</h2>
    <div class="row">
        @foreach (var restaurant in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@restaurant.ImagenUrl" class="card-img-top" alt="@restaurant.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Nombre</h5>
                        <p class="card-text">@restaurant.Descripcion</p>
                        <p class="text-warning">Rating: @restaurant.Rating â˜…</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
