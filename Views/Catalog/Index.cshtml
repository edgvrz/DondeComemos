@model IEnumerable<DondeComemos.Models.Restaurante>

@{
    ViewData["Title"] = "Catálogo de Restaurantes";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control" placeholder="Buscar restaurante..." />
</form>

<div class="row">
    @foreach (var r in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="@r.ImagenUrl" class="card-img-top" alt="@r.Nombre" />
                <div class="card-body">
                    <h5 class="card-title">@r.Nombre</h5>
                    <p class="card-text">@r.Descripcion</p>
                    <p class="text-muted">@r.Direccion</p>
                    <p>⭐ @r.Rating / 5</p>
                    <a asp-controller="Catalogo" asp-action="Detalle" asp-route-id="@r.Id" class="btn btn-primary btn-sm">Ver más</a>
                </div>
            </div>
        </div>
    }
</div>
