@model IEnumerable<DondeComemos.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Menú";
    var restauranteId = ViewBag.RestauranteId;
    var restauranteNombre = ViewBag.RestauranteNombre;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-2">
                <i class="bi bi-menu-button-wide"></i> Menú de @restauranteNombre
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Restaurantes" asp-action="Index">Restaurantes</a>
                    </li>
                    <li class="breadcrumb-item active">Gestión de Menú</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Create" asp-route-restauranteId="@restauranteId" 
               class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Agregar Producto
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3">No hay productos en el menú</h4>
            <p class="text-muted">Comienza agregando los platos que ofrece este restaurante</p>
            <a asp-action="Create" asp-route-restauranteId="@restauranteId" 
               class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Primer Producto
            </a>
        </div>
    }
    else
    {
        @foreach (var categoria in Model.GroupBy(p => p.Categoria))
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-bookmark-fill"></i> @categoria.Key
                        <span class="badge bg-light text-dark ms-2">@categoria.Count() productos</span>
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 80px;">Imagen</th>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th style="width: 120px;">Precio</th>
                                    <th style="width: 100px;">Estado</th>
                                    <th style="width: 150px;">Características</th>
                                    <th style="width: 200px;" class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in categoria.OrderBy(p => p.Orden))
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                                            {
                                                <img src="@producto.ImagenUrl" alt="@producto.Nombre" 
                                                     class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@producto.Nombre</strong>
                                            @if (producto.RecomendacionChef)
                                            {
                                                <span class="badge bg-warning text-dark ms-1">
                                                    <i class="bi bi-star-fill"></i> Chef
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @(string.IsNullOrEmpty(producto.Descripcion) ? 
                                                  "Sin descripción" : 
                                                  (producto.Descripcion.Length > 60 ? 
                                                   producto.Descripcion.Substring(0, 60) + "..." : 
                                                   producto.Descripcion))
                                            </small>
                                        </td>
                                        <td>
                                            <strong class="text-success">S/ @producto.Precio.ToString("0.00")</strong>
                                        </td>
                                        <td>
                                            @if (producto.Disponible)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Disponible
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> No disponible
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <small>
                                                @if (producto.EsVegetariano)
                                                {
                                                    <span class="badge bg-success me-1" title="Vegetariano">
                                                        <i class="bi bi-leaf"></i>
                                                    </span>
                                                }
                                                @if (producto.EsVegano)
                                                {
                                                    <span class="badge bg-success me-1" title="Vegano">
                                                        <i class="bi bi-flower1"></i>
                                                    </span>
                                                }
                                                @if (producto.SinGluten)
                                                {
                                                    <span class="badge bg-info me-1" title="Sin Gluten">
                                                        <i class="bi bi-shield-check"></i>
                                                    </span>
                                                }
                                                @if (producto.Picante)
                                                {
                                                    <span class="badge bg-danger me-1" title="Picante">
                                                        <i class="bi bi-fire"></i>
                                                    </span>
                                                }
                                            </small>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@producto.Id" 
                                                   class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@producto.Id" 
                                                   class="btn btn-sm btn-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <div class="text-center mt-4">
            <a asp-controller="Restaurantes" asp-action="Index" 
               class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver a Restaurantes
            </a>
        </div>
    }
</div>