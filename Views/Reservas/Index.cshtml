@model IEnumerable<DondeComemos.Models.Reserva>

@{
    ViewData["Title"] = "Mis Reservas";
}

<style>
    .reservations-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 80px 0;
        color: white;
    }
    .reservation-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.4s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .reservation-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }
    .status-badge {
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }
    .status-pendiente { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; }
    .status-confirmada { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; }
    .status-cancelada { background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%); color: #666; }
    .status-completada { background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%); color: #666; }
</style>

<div class="reservations-hero">
    <div class="container text-center">
        <h1 class="display-3 fw-bold mb-3">
            <i class="bi bi-calendar-check"></i> Mis Reservas
        </h1>
        <p class="lead">Gestiona tus reservas de restaurantes</p>
    </div>
</div>

<div class="container py-5">
    <!-- Nuevo encabezado con botones -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">
            <i class="bi bi-calendar-check"></i> Mis Reservas
        </h1>
        <div>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Calendario" class="btn btn-info btn-lg me-2">
                    <i class="bi bi-calendar-week"></i> Ver Calendario
                </a>
            }
            <a asp-controller="Restaurantes" asp-action="Search" 
               class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nueva Reserva
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-x-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x display-1 text-muted"></i>
            <h3 class="mt-4 fw-bold">No tienes reservas</h3>
            <p class="text-muted mb-4">
                Explora restaurantes y haz tu primera reserva
            </p>
            <a asp-controller="Restaurantes" asp-action="Search" 
               class="btn btn-primary btn-lg px-5"
               style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                <i class="bi bi-search"></i> Buscar Restaurantes
            </a>
        </div>
    }
    else
    {
        <!-- Filtros por Estado -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex gap-2 flex-wrap justify-content-center">
                    <button class="btn btn-outline-primary filter-btn active" data-filter="all">
                        Todas (@Model.Count())
                    </button>
                    <button class="btn btn-outline-warning filter-btn" data-filter="Pendiente">
                        Pendientes (@Model.Count(r => r.Estado == "Pendiente"))
                    </button>
                    <button class="btn btn-outline-info filter-btn" data-filter="Confirmada">
                        Confirmadas (@Model.Count(r => r.Estado == "Confirmada"))
                    </button>
                    <button class="btn btn-outline-success filter-btn" data-filter="Completada">
                        Completadas (@Model.Count(r => r.Estado == "Completada"))
                    </button>
                    <button class="btn btn-outline-danger filter-btn" data-filter="Cancelada">
                        Canceladas (@Model.Count(r => r.Estado == "Cancelada"))
                    </button>
                </div>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var reserva in Model)
            {
                var fechaHora = reserva.FechaReserva.Date + reserva.HoraReserva;
                var esPasada = fechaHora < DateTime.Now;
                var statusClass = reserva.Estado switch
                {
                    "Pendiente" => "status-pendiente",
                    "Confirmada" => "status-confirmada",
                    "Cancelada" => "status-cancelada",
                    "Completada" => "status-completada",
                    _ => "status-pendiente"
                };

                <div class="col-md-6 reservation-item" data-status="@reserva.Estado">
                    <div class="card reservation-card">
                        <div class="card-header bg-light p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0 fw-bold">@reserva.Restaurante?.Nombre</h5>
                                <span class="status-badge @statusClass">
                                    @reserva.Estado
                                </span>
                            </div>
                        </div>
                        
                        <div class="card-body p-4">
                            <div class="row g-3 mb-3">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar3 text-primary fs-4 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Fecha</small>
                                            <strong>@reserva.FechaReserva.ToString("dd/MM/yyyy")</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-clock text-success fs-4 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Hora</small>
                                            <strong>@reserva.HoraReserva.ToString(@"hh\:mm")</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-people text-info fs-4 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Personas</small>
                                            <strong>@reserva.NumeroPersonas</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-hash text-warning fs-4 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Código</small>
                                            <strong>@reserva.CodigoReserva</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (reserva.ProductosReservados.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted fw-bold">Platos reservados:</small>
                                    <ul class="list-unstyled mt-2">
                                        @foreach (var prod in reserva.ProductosReservados.Take(3))
                                        {
                                            <li class="mb-1">
                                                <i class="bi bi-check-circle text-success"></i>
                                                @prod.Producto?.Nombre (@prod.Cantidad)
                                            </li>
                                        }
                                        @if (reserva.ProductosReservados.Count > 3)
                                        {
                                            <li class="text-muted">
                                                <small>+ @(reserva.ProductosReservados.Count - 3) más...</small>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(reserva.NotasEspeciales))
                            {
                                <div class="alert alert-info small mb-3">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Notas:</strong> @reserva.NotasEspeciales
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@reserva.Id" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i> Ver Detalles
                                </a>

                                @if (reserva.Estado != "Cancelada" && reserva.Estado != "Completada" && !esPasada)
                                {
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@reserva.Id" 
                                           class="btn btn-warning">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <form asp-action="Cancel" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@reserva.Id" />
                                            <button type="submit" class="btn btn-danger"
                                                    onclick="return confirm('¿Cancelar esta reserva?')">
                                                <i class="bi bi-x-circle"></i> Cancelar Reserva
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-light text-muted small p-2 text-center">
                            Creada el @reserva.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                const filter = this.dataset.filter;
                document.querySelectorAll('.reservation-item').forEach(item => {
                    if (filter === 'all' || item.dataset.status === filter) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });
    </script>
}
