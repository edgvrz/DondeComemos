@model DondeComemos.Models.UserProfile

@{
    ViewData["Title"] = "Mi Perfil";
    var historial = ViewBag.Historial as List<string> ?? new List<string>();
    var favoritos = ViewBag.Favoritos as List<DondeComemos.Models.Restaurante> ?? new List<DondeComemos.Models.Restaurante>();
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <img src="@(Model.FotoPerfil ?? "/img/default-avatar.jpg")" 
                         class="rounded-circle mb-3 img-thumbnail" 
                         style="width: 150px; height: 150px; object-fit: cover;" 
                         alt="Foto de perfil">
                    <h4 class="mb-1">@Model.NombreUsuario</h4>
                    <p class="text-muted small">@ViewBag.Email</p>
                    <p class="text-muted small">
                        <i class="bi bi-calendar3"></i> 
                        Miembro desde @Model.FechaCreacion.ToString("MMMM yyyy")
                    </p>
                    @if (Model.UltimaActividad.HasValue)
                    {
                        <p class="text-muted small">
                            <i class="bi bi-clock"></i> 
                            Última actividad: @Model.UltimaActividad.Value.ToString("dd/MM/yyyy HH:mm")
                        </p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title mb-3">
                        <i class="bi bi-info-circle"></i> Información Personal
                    </h6>
                    
                    @if (!string.IsNullOrEmpty(Model.Nombres) || !string.IsNullOrEmpty(Model.Apellidos))
                    {
                        <p class="small mb-2">
                            <strong>Nombre Completo:</strong><br>
                            @Model.Nombres @Model.Apellidos
                        </p>
                    }
                    
                    @if (Model.FechaNacimiento.HasValue)
                    {
                        var edad = DateTime.Now.Year - Model.FechaNacimiento.Value.Year;
                        <p class="small mb-2">
                            <strong>Edad:</strong> @edad años
                        </p>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Ciudad))
                    {
                        <p class="small mb-2">
                            <strong>Ciudad:</strong> @Model.Ciudad
                        </p>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Telefono))
                    {
                        <p class="small mb-2">
                            <strong><i class="bi bi-telephone"></i></strong> @Model.Telefono
                        </p>
                    }
                    
                    <hr>
                    
                    <p class="small text-muted">
                        @(Model.Biografia ?? "No has añadido una biografía aún")
                    </p>
                </div>
            </div>
        </div>

        <!-- Contenido Principal -->
        <div class="col-lg-9">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="editar-tab" data-bs-toggle="tab" 
                            data-bs-target="#editar" type="button">
                        <i class="bi bi-person-circle"></i> Editar Perfil
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="favoritos-tab" data-bs-toggle="tab" 
                            data-bs-target="#favoritos" type="button">
                        <i class="bi bi-heart"></i> Favoritos (@favoritos.Count)
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="historial-tab" data-bs-toggle="tab" 
                            data-bs-target="#historial" type="button">
                        <i class="bi bi-clock-history"></i> Historial
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="seguridad-tab" data-bs-toggle="tab" 
                            data-bs-target="#seguridad" type="button">
                        <i class="bi bi-shield-lock"></i> Seguridad
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="profileTabContent">
                <!-- Editar Perfil -->
                <div class="tab-pane fade show active" id="editar" role="tabpanel">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-person-circle"></i> Editar Perfil</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="NombreUsuario" class="form-label fw-bold"></label>
                                            <input asp-for="NombreUsuario" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Email (No editable)</label>
                                            <input type="text" class="form-control" value="@ViewBag.Email" disabled />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Nombres" class="form-label fw-bold"></label>
                                            <input asp-for="Nombres" class="form-control" placeholder="Juan" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Apellidos" class="form-label fw-bold"></label>
                                            <input asp-for="Apellidos" class="form-control" placeholder="Pérez García" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Telefono" class="form-label fw-bold"></label>
                                            <input asp-for="Telefono" class="form-control" placeholder="+51 999 999 999" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Ciudad" class="form-label fw-bold"></label>
                                            <input asp-for="Ciudad" class="form-control" placeholder="Arequipa" />
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FechaNacimiento" class="form-label fw-bold"></label>
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Biografia" class="form-label fw-bold"></label>
                                    <textarea asp-for="Biografia" class="form-control" rows="3" 
                                              placeholder="Cuéntanos algo sobre ti..."></textarea>
                                    <small class="text-muted">Máximo 500 caracteres</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FotoArchivo" class="form-label fw-bold">
                                        <i class="bi bi-camera"></i> Cambiar Foto de Perfil
                                    </label>
                                    <input asp-for="FotoArchivo" type="file" class="form-control" 
                                           accept="image/*" id="fotoArchivo" onchange="previewProfileImage(event)" />
                                    <small class="text-muted d-block mt-1">
                                        Formatos: JPG, PNG, GIF (Máx. 5MB)
                                    </small>

                                    <div id="imagePreview" class="mt-3 text-center" style="display:none;">
                                        <p class="text-muted small">Vista previa:</p>
                                        <img id="preview" src="" class="rounded-circle img-thumbnail" 
                                             style="width: 150px; height: 150px; object-fit: cover;" />
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Guardar Cambios
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Favoritos -->
                <div class="tab-pane fade" id="favoritos" role="tabpanel">
                    <div class="card shadow-sm">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="bi bi-heart-fill"></i> Mis Restaurantes Favoritos</h5>
                        </div>
                        <div class="card-body">
                            @if (favoritos.Any())
                            {
                                <div class="row g-3">
                                    @foreach (var restaurante in favoritos)
                                    {
                                        <div class="col-md-6 col-lg-4">
                                            <div class="card h-100 shadow-sm">
                                                <img src="@(restaurante.ImagenUrl ?? "/img/restaurant-default.jpg")" 
                                                     class="card-img-top" style="height: 180px; object-fit: cover;" 
                                                     alt="@restaurante.Nombre">
                                                <div class="card-body">
                                                    <h6 class="card-title fw-bold">@restaurante.Nombre</h6>
                                                    <p class="text-muted small mb-2">
                                                        <i class="bi bi-geo-alt"></i> @restaurante.Direccion
                                                    </p>
                                                    <p class="mb-2">⭐ @restaurante.Rating/5</p>
                                                    <div class="d-grid gap-2">
                                                        <a asp-controller="Restaurantes" asp-action="Details" 
                                                           asp-route-id="@restaurante.Id" class="btn btn-primary btn-sm">
                                                            Ver Detalles
                                                        </a>
                                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                                onclick="eliminarFavorito(@restaurante.Id)">
                                                            <i class="bi bi-heart-fill"></i> Quitar de Favoritos
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-heart display-1 text-muted"></i>
                                    <h5 class="text-muted mt-3">No tienes restaurantes favoritos aún</h5>
                                    <p class="text-muted">Explora y agrega tus restaurantes favoritos</p>
                                    <a asp-controller="Restaurantes" asp-action="Search" class="btn btn-primary mt-2">
                                        <i class="bi bi-search"></i> Buscar Restaurantes
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Historial -->
                <div class="tab-pane fade" id="historial" role="tabpanel">
                    <div class="card shadow-sm">
                        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Historial de Búsquedas</h5>
                            @if (historial.Any())
                            {
                                <form asp-action="LimpiarHistorial" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-light" 
                                            onclick="return confirm('¿Deseas limpiar todo el historial?')">
                                        <i class="bi bi-trash"></i> Limpiar
                                    </button>
                                </form>
                            }
                        </div>
                        <div class="card-body">
                            @if (historial.Any())
                            {
                                <div class="list-group">
                                    @foreach (var item in historial)
                                    {
                                        var partes = item.Split('|');
                                        var termino = partes[0];
                                        var fecha = partes.Length > 1 ? partes[1] : "";
                                        
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="bi bi-search text-muted"></i>
                                                <strong>@termino</strong>
                                            </div>
                                            <small class="text-muted">@fecha</small>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-clock-history display-1 text-muted"></i>
                                    <h5 class="text-muted mt-3">No hay búsquedas recientes</h5>
                                    <p class="text-muted">Tu historial de búsquedas aparecerá aquí</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Seguridad -->
                <div class="tab-pane fade" id="seguridad" role="tabpanel">
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0"><i class="bi bi-shield-lock"></i> Cambiar Contraseña</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="ChangePassword" method="post">
                                <div class="mb-3">
                                    <label for="currentPassword" class="form-label fw-bold">Contraseña Actual</label>
                                    <input type="password" class="form-control" id="currentPassword" 
                                           name="currentPassword" required />
                                </div>

                                <div class="mb-3">
                                    <label for="newPassword" class="form-label fw-bold">Nueva Contraseña</label>
                                    <input type="password" class="form-control" id="newPassword" 
                                           name="newPassword" required />
                                    <small class="text-muted">
                                        Mínimo 6 caracteres, incluye mayúsculas, minúsculas y números
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label fw-bold">Confirmar Nueva Contraseña</label>
                                    <input type="password" class="form-control" id="confirmPassword" 
                                           name="confirmPassword" required />
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-key"></i> Cambiar Contraseña
                                    </button>
                                </div>
                            </form>

                            <hr class="my-4">

                            <div class="alert alert-info">
                                <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Consejos de Seguridad</h6>
                                <ul class="mb-0 small">
                                    <li>Usa una contraseña única que no utilices en otros sitios</li>
                                    <li>Combina letras mayúsculas, minúsculas, números y símbolos</li>
                                    <li>Evita información personal obvia (nombres, fechas de nacimiento)</li>
                                    <li>Cambia tu contraseña regularmente</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewProfileImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }

        function eliminarFavorito(restauranteId) {
            if (confirm('¿Deseas quitar este restaurante de tus favoritos?')) {
                fetch('/Profile/EliminarFavorito?restauranteId=' + restauranteId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                });
            }
        }
    </script>
}